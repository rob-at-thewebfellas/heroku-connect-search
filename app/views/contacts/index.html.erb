<h2 class="page_heading">Contacts</h2>
<%= form_tag(contacts_path, method: :get) do %>
  <div class="field_wrapper">
    <div class="field_label">
      <%= label_tag(:keywords, "Search keywords") %>
    </div>
    <div class="field_input">
      <%= text_field_tag('q[keywords]', current_scopes[:keywords], id: 'keywords') %>
    </div>
  </div>
  <%= submit_tag("Search", name: nil) %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @contacts.empty? %>
      <tr>
        <td class="warning" colspan="3">No contacts available</td>
      </tr>
    <% else %>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= link_to(contact_name(contact), contact) %></td>
          <td><%= contact.title %></td>
          <td>
            <%= link_to('Edit', edit_contact_path(contact)) %>
            &nbsp;
            <%= link_to('Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }) %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= paginate(@contacts) %>
<ul>
  <li><%= link_to('New Contact', new_contact_path) %></li>
</ul>
