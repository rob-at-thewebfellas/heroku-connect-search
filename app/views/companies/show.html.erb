<h2>Company details</h2>
<dl>
  <dt class="label">Name</dt>
  <dd class="content"><%= @company.name %></dd>
  <dt class="label">Last updated</dt>
  <dd class="content"><%= l(@company.updated_at, format: :long) %></dd>
</dl>
<ul>
  <li><%= link_to('Edit', edit_company_path(@company)) %></li>
  <li><%= link_to('Back', companies_path) %></li>
</ul>
