<%= form_for(@company) do |form| %>
  <% if @company.errors.any? %>
    <div class="errors_on_base">
      <h3><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h3>
      <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="field_wrapper required">
      <div class="field_label">
        <%= form.label(:name) %>
      </div>
      <div class="field_input">
        <%= form.text_field(:name, size: 50) %>
      </div>
    </div>
  </fieldset>
  <div class="buttons">
    <%= form.submit %>
    <%= link_to('Cancel', companies_path, class: 'button cancel') %>
  </div>
<% end %>
